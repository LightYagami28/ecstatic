<?rb
def mkmenu(menu)
  _buf << "<ul class=\"nav\">\n"
  menu.each_pair do |k,v|
    if v.class == Hash
      _buf << "<li>#{k}\n"
      mkmenu(v)
      _buf << "</li>\n"
    else
      selected = if @_url == v
                    " class=\"selected\""
                 else
                    ""
                 end
      _buf << "<li><a href=#{v}#{selected}>#{k}</a></li>\n"
    end
  end
  _buf << "</ul>\n"
end
?>
<?rb mkmenu(@_nav) ?>
